# Only execute this file once per shell.
if [ -n "${__MYRC_SOURCED:-}" ]; then return; fi
__MYRC_SOURCED=1

export EDITOR='vim'

# use `highlight` instead of `bat` to fix ranger freezing issue, HIGHLIGHT_STYLE can be a random name to avoid comment lines grey out
export HIGHLIGHT_STYLE=gruvbox

# TODO replace autojump by fasd
# [[ -f ~/.nix-home-path/etc/profile.d/autojump.sh ]] && . ~/.nix-home-path/etc/profile.d/autojump.sh
eval "$(fasd --init auto)"

# Lam changed to use gpg agent instead of macos ssh default agent
# the old value was SSH_AUTH_SOCK=/private/tmp/com.apple.launchd.HFFnABBlrf/Listeners
export SSH_AUTH_SOCK=$(gpgconf --list-dirs agent-ssh-socket)
# Lam: should I change to `gpg-agent --daemon`?
gpgconf --launch gpg-agent

# vim: ft=sh
