alias l='ls -a'
alias ll='ls -lAh'
alias la='ls -laF'

alias myip='dig +short myip.opendns.com @resolver1.opendns.com'
alias yt2mp3='youtube-dl -x --audio-format mp3 --audio-quality 0 -o "%(title)s.%(ext)s"'

## for emacs daemon, usage of export variable must surround with "
export EMACSAPP="~/.nix-home-path/Applications/Emacs.app"
alias em="open $EMACSAPP"
alias emacs="$EMACSAPP/Contents/MacOS/Emacs"
# see https://www.gnu.org/software/emacs/manual/html_mono/efaq.html#Colors-on-a-TTY
alias emacsnw="TERM=xterm-direct emacs -nw"
alias ec="emacsclient -n"
# doom-emacs and spacemacs
alias doom-emacs="emacs --with-profile doom-emacs &"
alias spacemacs="emacs --with-profile spacemacs &"

