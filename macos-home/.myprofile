# LamT: switching to my custom profile to enable default path for apps in ~/.nix-profile
# nix-env --switch-profile /etc/profiles/per-user/$USER
# keep user's default profile for trying with nix-env
# Example: nix-env --profile /nix/var/nix/profiles/per-user/$USER/profile -i hello
export PATH="/nix/var/nix/profiles/per-user/$USER/profile/bin:$PATH"

# for nix home-manager latest manual
export MANPATH="$HOME/.nix-profile/share/man:$MANPATH"
# for emacs full-latest manual
export INFOPATH="$HOME/.nix-profile/share/info:$INFOPATH"

export NNN_FIFO="/tmp/nnn.fifo"
export NNN_PLUG='f:finder;o:fzopen;p:mocplay;d:diffs;t:nmount;v:imgview;p:preview-tui'
